/**
 * A simple integer list abstraction, with functional abstractions for computation
 */

type IntList
	fun isEmpty():Bool
	fun forEach(f:Int -> Unit):Unit
	fun reduce(identity:Int, f:Int -> (Int -> Int)):Int // hack: fix associativity
	
class Cons
	implements IntList // do we want this to be indented?
	
	var v:Int
	var n:IntList
	
	fun isEmpty():Bool = false
	fun forEach(f:Int -> Unit):Unit =
		f(this.v)
		this.n.forEach(f)
	fun reduce(identity:Int, f:Int -> (Int -> Int)):Int =
		val nextResult : Int = this.n.reduce(identity,f)
		f(this.v)(nextResult)
	
	class fun make(value:Int,next:IntList):IntList =
		new
			v = value
			n = next
	

class Nil
	implements IntList
	fun isEmpty():Bool = true
	fun forEach(f:Int -> Unit):Unit = ()
	fun reduce(identity:Int, f:Int -> (Int -> Int)):Int = identity
	class fun make():IntList = new
	
val nil : IntList = Nil.make()
	
